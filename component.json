{
  "title": "XML",
  "description": "Component to work with XML files",
  "actions": {
    "parse": {
      "title": "Parse w. XSD",
      "main": "./lib/actions/parse.js",
      "fields": {
        "schemaUri": {
          "label": "XML Schema URI",
          "viewClass": "TextFieldWithNoteView",
          "required": true,
          "placeholder": "https://foo.bar.com/schema.xsd",
          "note": "Please make sure full URI is specified, including <i>http</i> or <i>https</i> etc."
        }
      },
      "metadata": {
        "in": {
          "type": "object",
          "properties": {
            "xml": {
              "type": "string",
              "required": false,
              "title": "Input XML"
            }
          }
        },
        "out": {
          "type": "object",
          "properties": {
            "xml": {
              "type": "string",
              "required": false,
              "title": "Input XML"
            }
          }
        }
      }
    },
    "xmlToJson": {
      "title": "XML to JSON",
      "main": "./lib/actions/xmlToJson.js",
      "metadata": {
        "in": "./lib/schemas/xmlToJson.in.json",
        "out": "./lib/schemas/xmlToJson.out.json"
      }
    }
  }
}
